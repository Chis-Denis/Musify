{
  "devDependencies": {
    "cypress": "^12.17.4",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "scripts": {
    "test": "cypress run",
    "merge-reports": "npx mochawesome-merge cypress/reports/*.json > mochawesome.json",
    "generate-report": "npx mochawesome-report-generator mochawesome.json --reportDir cypress/reports/html",
    "report": "npm run merge-reports && npm run generate-report"
  }
}
